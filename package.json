{
  "name": "wt-tracker",
  "description": "High performance WebRTC signaling server for peer-to-peer networking",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "author": "Novage",
  "homepage": "https://github.com/Novage/wt-tracker",
  "exports": "./src/index.ts",
  "types": "./src/index.ts",
  "publishConfig": {
    "exports": "lib/index.js",
    "types": "lib/index.d.ts"
  },
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "wt-tracker": "./bin/wt-tracker"
  },
  "keywords": [
    "p2p",
    "peer-to-peer",
    "webrtc",
    "tracker",
    "websockets",
    "networking",
    "signaling",
    "sdp"
  ],
  "scripts": {
    "start": "node ./lib/run-tracker.js railway-config.json",
    "build": "npm run lint && npm run clean && npm run compile",
    "compile": "tsc",
    "lint": "eslint src",
    "clean": "rimraf lib",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:compile": "tsc --project tsconfig.test.json",
    "test:clean": "rimraf test_dist",
    "railway:build": "npm run clean && npm run compile",
    "railway:start": "npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Novage/wt-tracker.git"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.52.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^24.0.7",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "globals": "^16.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-mockito": "^2.6.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vitest": "^3.2.4",
    "ws": "^8.18.3"
  }
}
